<launch>
    <arg name="bag_path" default="/media/hayashide/KIOXIA/hayashide/rosbag/0220/20230220_d_090_30_shingo.bag"/>
    <arg name="save_path" default="/home/hayashide/catkin_ws/src/sotsuron_experiment/videos/avi/01_00_00__2023-10-19-10-48-46.avi"/>

    <!-- <arg name="topic_name" default="/hsrb/realsense/camera/color/image_raw"/> -->
    <!-- <arg name="topic_name" default="/zed/zed_node/rgb/image_rect_color"/> -->
    <arg name="topic_name" default="/stereo/left/image_rect"/>
    <arg name="fps" default="6"/>

    <node
        pkg="rosbag" 
        name="play" 
        type="play" 
        args="$(arg bag_path)"
        required="True"
    />    

    <node
        pkg="image_view" 
        name="video_recorder" 
        type="video_recorder" 
        output="screen" 
        args="image:='$(arg topic_name)' _fps:='$(arg fps)' _filename:='$(arg save_path)'"
    />
</launch>