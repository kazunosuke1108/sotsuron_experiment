    <!-- <arg name="bag_path" default="/media/hayashide/KIOXIA/hayashide/rosbag/$(arg bag_basename).bag"/> -->
    <arg name="bag_path" default="/media/hayashide/KIOXIA/hayashide/rosbag/0220/20230220_d_090_30_shingo.bag"/>
    <!-- <arg name="topic_name" default="/hsrb/realsense/camera/color/image_raw"/> -->
    <arg name="topic_name" default="/zed/zed_node/rgb/image_rect_color"/>
    <arg name="fps" default="15"/>
    <arg name="save_path" default="/home/hayashide/catkin_ws/src/sotsuron_experiment/results/0220/movie/$(arg avi_basename).avi"/>


    <node
        pkg="image_view" 
        name="video_recorder" 
        type="video_recorder" 
